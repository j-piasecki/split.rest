{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@styling/*": ["styling/*"],
      "@type/*": ["type/*"],
      "@utils/*": ["utils/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
